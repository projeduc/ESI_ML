\newcommand{\kcolorbox}[3][0.4cm]{%
	\begin{tikzpicture}%
		\node [draw=\beamer@thc@fg, line width=1pt, rounded corners=5pt, %
		inner sep=0pt,minimum height=#1, text width=\dimexpr#2-4pt\relax, align=center] {%
			\begin{minipage}[b]{\dimexpr#2-4pt\relax}%
				#3%
			\end{minipage}%
		};%
	\end{tikzpicture}%
}

